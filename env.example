# Backend & Worker IMAP configuration
IMAP_HOST=localhost
IMAP_PORT=993
IMAP_USERNAME=user@example.org
IMAP_PASSWORD=
IMAP_USE_SSL=true
IMAP_INBOX=INBOX
PROCESS_ONLY_SEEN=true
SINCE_DAYS=30

# Mail routing behaviour
MOVE_MODE=CONFIRM
AUTO_THRESHOLD=0.92
MAX_SUGGESTIONS=3
MIN_MATCH_SCORE=60
MIN_NEW_FOLDER_SCORE=0.78
PENDING_LIST_LIMIT=25

# Worker runtime
IMAP_WORKER_AUTOSTART=0
POLL_INTERVAL_SECONDS=30
IDLE_FALLBACK=true
INIT_RUN=false

# Tag handling for processed messages
IMAP_PROTECTED_TAG=
IMAP_PROCESSED_TAG=
IMAP_AI_TAG_PREFIX=SmartSorter

# Ollama & model parameters
OLLAMA_HOST=http://ollama:11434
CLASSIFIER_MODEL=llama3
CLASSIFIER_TEMPERATURE=0.1
CLASSIFIER_TOP_P=0.4
CLASSIFIER_NUM_PREDICT=512
CLASSIFIER_NUM_CTX=4096
CLASSIFIER_NUM_CTX_MATCH_MODEL=true
CLASSIFIER_CONTEXT_RESERVE_TOKENS=1200
EMBED_MODEL=nomic-embed-text
EMBED_PROMPT_HINT=Ber√ºcksichtige Absender-Domains, Kundennummern und Bestellbezug.
EMBED_PROMPT_MAX_CHARS=8000

# Database & logging
DATABASE_URL=sqlite:///data/app.db
LOG_LEVEL=INFO
DEV_MODE=true

# Analysis module defaults
ANALYSIS_MODULE=HYBRID

# Calendar synchronisation
CALENDAR_SYNC_ENABLED=false
CALDAV_URL=
CALDAV_USERNAME=
CALDAV_PASSWORD=
CALDAV_CALENDAR=
CALENDAR_DEFAULT_TIMEZONE=Europe/Berlin
CALENDAR_PROCESSED_TAG=Termin bearbeitet
CALENDAR_SOURCE_FOLDERS=
CALENDAR_PROCESSED_FOLDER=
CALENDAR_POLL_INTERVAL_SECONDS=900
